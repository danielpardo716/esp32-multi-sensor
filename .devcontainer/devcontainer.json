{
  "name": "Zephyr Development Environment for Espressif",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "nordic-semiconductor.nrf-devicetree",
        "ms-vscode.hexeditor"
      ]
    }
  },
  "forwardPorts": [],
  // "workspaceMount": "source=${localWorkspaceFolder}/workspace,target=/workspace,type=bind,consistency=cached",
  // "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/esp32-multi-sensor,type=bind,consistency=cached",
  "workspaceFolder": "/workspaces/esp32-multi-sensor",
  "runArgs": [
    "--name",
    "Zephyr-Introduction",
    "--rm",
    "-it",
    "-p",
    "2222:22",
    "-p",
    "3333:3333",
    "-p",
    "8800:8800"
  ],
  "remoteUser": "root"
}
